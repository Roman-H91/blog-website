<%- include("./partials/header.ejs") -%>
    <h1>Home</h1>

    <p>
        <%= text %>
    </p>

    <div>
        <% posts.map(function(post) { %>
            <h2><%= post.title %></h2>
            <p>
                <%= post.text.substring(0, 100) + " ..." %>
                <a href="/posts/<%= post.title %>">Read More</a>
            </p>
        <% }); %>
    </div>
    <%- include("./partials/footer.ejs") -%>